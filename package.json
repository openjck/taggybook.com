{
  "private": true,
  "staticFiles": {
    "staticPath": "src/static"
  },
  "scripts": {
    "dev": "parcel serve src/index.html src/404.html",
    "build": "parcel build src/index.html src/404.html",
    "format": "prettier --write .",
    "test": "npm run lint",
    "lint": "npm-run-all lint:*",
